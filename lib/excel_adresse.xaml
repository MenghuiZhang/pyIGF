<Window
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Excel"  ShowInTaskbar="False"
         WindowStartupLocation="CenterScreen" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center"  Background="SkyBlue" Width="500" Height="130">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Durch" Content="durchsuchen"  Click="durchsuchen" FontSize="14"  Margin="0" Width="135" Height="24" Grid.Row="1" />
        <Button Content="ok" Grid.Column="1"  Click="ok" FontSize="14"  Margin="0"   Width="135" Height="24" Grid.Row="1" />
        <TextBlock  x:Name="Adresse" Margin="5,5,5,0" TextWrapping="Wrap" Text="Excel Adresse" Grid.ColumnSpan="2" FontSize="14" VerticalAlignment="Top"/>
    </Grid>

</Window>
