<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Meldung" Height="170" Width="300" Background="SkyBlue" ResizeMode="NoResize"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.RowSpan="2">
            <TextBlock x:Name="nachricht" Text="Haben Sie die alten Daten gespeichert?" Margin="10" FontWeight="Bold" FontFamily="Times New Roman" FontSize="14" Foreground="#FFF90000"/>
            <DockPanel x:Name="erinnern">
              <TextBlock Text="erneut erinnern in" Margin="10" FontFamily="Times New Roman" FontSize="14" Foreground="Black" Height="20"/>
             <ComboBox x:Name="Zeit" Height="23" VerticalAlignment="Center" Margin="0,10,30,10" />
            </DockPanel>
            <DockPanel Margin="0,10,0,0">
                <Button x:Name="yes" Click="ja" Content="Ja" Width="70" Height="20" Margin="50,0,0,0" HorizontalAlignment="Left"/>
                <Button x:Name="no" Click="nein" Content="Nein" Width="70" Height="20" HorizontalAlignment="Right" Margin="0,0,50,0" />
            </DockPanel>
        </StackPanel>
    </Grid>

</Window>
