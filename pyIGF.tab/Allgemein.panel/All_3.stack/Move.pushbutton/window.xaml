<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verschiebung - nur in Grundrissansicht" Height="240" Width="300" Background="SkyBlue" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Text="Hinweis: zur Trennung der Dezimalstellen bitte einen Punkt verwenden (Bsp. 10.1)" Foreground="Red" TextWrapping="Wrap" Margin="10,5,0,5"/>
            <DockPanel Margin="10">
                <TextBlock Text="Verschiebung: "/>
                <TextBox  x:Name="zahl" Width="150" />
                <TextBlock Text=" mm"/>
            </DockPanel>
            <DockPanel Margin="10">
                <Button Content="Links" Width="70" Height="20" Click="link" Margin="40,0,0,0"/>
                <Button Content="Rechts" Width="70" Height="20" Click="recht"/>
            </DockPanel>
            <DockPanel Margin="10">
                <Button Content="Hinter" Width="70" Height="20" Click="hinter" Margin="40,0,0,0"/>
                <Button Content="Vorne" Width="70" Height="20" Click="vorne"/>
            </DockPanel>
            <DockPanel Margin="10">
                <Button Content="Oben" Width="70" Height="20" Click="oben" Margin="40,0,0,0"/>
                <Button Content="Unten" Width="70" Height="20" Click="unten"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
