<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Export to"  ShowInTaskbar="False"
         WindowStartupLocation="CenterScreen" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center"  Background="SkyBlue" Width="500" Height="130">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="durchsuchen"  Click="durchsuchen" FontSize="14"  Margin="5" Width="135" Height="30" Grid.Row="1" />
        <Button Content="ok" Grid.Column="1"  Click="ok" FontSize="14"  Margin="5"   Width="135" Height="30" Grid.Row="1" />
        <TextBox  x:Name="Adresse" HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap" Text="Excel Adresse" VerticalAlignment="Top" Width="450" Grid.ColumnSpan="2" Height="30" FontSize="16"/>
    </Grid>

</Window>